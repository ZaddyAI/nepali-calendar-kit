    "themeable",
    "bikram sambat",
    "nepali calendar",
    "nepali date picker",
    "nepali date converter"
  ],
  "author": "Gambhir Poudel",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0 <20.0.0",
    "react-dom": ">=18.0.0 <20.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0 || ^19.0.0",
    "@types/react-dom": "^18.2.0 || ^19.0.0",
    "esbuild-plugin-css-modules": "^0.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
