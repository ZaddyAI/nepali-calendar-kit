{
  "name": "@gambhirpoudel/nepali-calendar-kit",
  "version": "1.0.5",
  "description": "Premium themeable Nepali DatePicker and AD/BS Converter for React.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/index.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify --clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZaddyAI/nepali-calendar-kit.git"
  },
  "keywords": [
    "react",
    "nepali",
    "datepicker",
    "bs-ad-converter",
    "calendar",
    "themeable"
  ],
  "author": "Gambhir Poudel",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
